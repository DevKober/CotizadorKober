@{
    ViewBag.Title = "TarjaTinas";
}

<script src="~/Content/jquery-1.11.2.js"></script>
<!-- Latest compiled and minified JavaScript -->    

<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="~/Content/bootstrap/css/bootstrap.min.css">
<!-- Optional theme -->
<link rel="stylesheet" href="~/Content/bootstrap/css/bootstrap-theme.min.css">
<link rel="stylesheet" href="~/Content/bootstrap/css/full-slider.css">    
<script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
<link href="~/Content/mk.css" rel="stylesheet" />

<p class="pMk" style="text-align:center; font-size:28px;">Elija el número de tinas de acuerdo a sus necesidades</p>
<div style="height:450px;">
<div class="divGenericoCentrado">
    <div style="float: left; overflow:auto; width:230px; text-align:center; margin:2px; color: deepskyblue;">
        @*border:solid; border-radius:3px; border-width:1px; border-color:lightgray;*@                  
        <img id="1tina" style="cursor:pointer;" src="~/Images/1tina.png" />
        <p>
        1 TINA
        </p>
    </div>
    <div style="float: left; overflow:auto; width:230px; text-align:center; margin:2px; color: deepskyblue;">
        @*border:solid; border-radius:3px; border-width:1px; border-color:lightgray;*@
        <img id="2tinas" style="cursor:pointer;" src="~/Images/2tinas.png" />
        <p>
        2 TINAS
        </p>
    </div>
    <div style="float: left; overflow:auto; width:230px; text-align:center; margin:2px; color: deepskyblue;">
        @*border:solid; border-radius:3px; border-width:1px; border-color:lightgray;*@
        <img id="3tinas" style="cursor:pointer;" src="~/Images/3tinas.png" />
        <p>
        3 TINAS
        </p>
    </div>
</div>
    <div class="divGenericoCentrado">
        <div style="margin-top:25px;">
            <img src="~/Images/pb7-3.png" />
        </div>
    </div>  
    <div class="divGenericoCentrado">
        <button id="btnBack" type="button" class="btn btn-primary" style="margin-top:10px; margin-bottom:10px;"> <span class="glyphicon glyphicon-triangle-left" aria-hidden="true"></span> Anterior</button>
    </div>
</div>

<script>
    $(function () {
        var tipo = "@ViewBag.TipoTarja";
        var medida = "@ViewBag.Medida";

        $("#1tina").click(function () {
            window.location = "/Home/TarjaMueble?tipo=" + tipo + "&medida=" + medida + "&tinas=1";
        });

        $("#2tinas").click(function () {
            window.location = "/Home/TarjaMueble?tipo=" + tipo + "&medida=" + medida + "&tinas=2";
        });

        $("#3tinas").click(function () {
            window.location = "/Home/TarjaMueble?tipo=" + tipo + "&medida=" + medida + "&tinas=3";
        });
        $("#btnBack").click(function () {
            window.location = "/Home/TarjaMedida?tipo=" + tipo;
        });
    });
</script>
